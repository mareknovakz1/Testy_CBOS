{
  "name": "testy-cbos",
  "version": "1.0.0",
  "description": "Testovaci skripty pro CBOS",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",

    "run:sestavy_reg": "dotenv -- npx playwright test --project=API --grep @regression --grep @API --grep @sestavy",
    "report:sestavy_reg": "dotenv -- npx @testiny/cli automation -P 1 --junit results.xml --run-title-pattern \"Regression Sestavy - %{date} %{time}\"",
    "test:report_sestavy_reg": "npm-run-all --continue-on-error --serial run:sestavy_reg report:sestavy_reg",

    "run:smoke_api": "dotenv -- npx playwright test --project=API --grep @smoke",
    "report:smoke_api": "dotenv -- npx @testiny/cli automation -P 1 --junit results.xml --run-title-pattern \"Smoke Test - %{date} %{time}\"",
    "test:report_smoke_api": "npm-run-all --continue-on-error --serial run:smoke_api report:smoke_api"
  },

  "keywords": [],
  "author": "Marek Nov√°k",
  "license": "ISC",
  "dependencies": {
    "tslog": "^4.9.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.2",
    "@testiny/cli": "^1.26.2",
    "@types/d3": "^7.4.3",
    "@types/node": "^24.3.0",
    "@types/xml2js": "^0.4.14",
    "dotenv": "^17.2.1",
    "dotenv-cli": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "xml2js": "^0.6.2",
    "xmlrpc": "^1.3.2"
  }
}
